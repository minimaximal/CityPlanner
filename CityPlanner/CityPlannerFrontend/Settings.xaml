<Page
    x:Class="CityPlannerFrontend.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="pageTitle" Text="Einstellungen"
               Margin="16" Style="{StaticResource TitleTextBlockStyle}"/>
        <HyperlinkButton Content="Hauptmen&#252;"
                              Click="HyperlinkButton_Click"
                              HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <StackPanel VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Text="Einwohnerzahl"/>
            <NumberBox Value="{x:Bind Path=Population, Mode=TwoWay}" HorizontalAlignment="Center" Width="200" x:Name="Einwohnerzahl" />
            <TextBlock HorizontalAlignment="Center" Text="Kartenbreite"/>
            <NumberBox Value="{x:Bind Path=X, Mode=TwoWay}" HorizontalAlignment="Center" Width="200" x:Name="Kartenbreite"/>
            <TextBlock HorizontalAlignment="Center" Text="Kartenl&#228;nge"/>
            <NumberBox Value="{x:Bind Path=Y, Mode=TwoWay}" HorizontalAlignment="Center" Width="200" x:Name="Kartenlaenge"/>
            <TextBlock HorizontalAlignment="Center" Text="Importquote"/>
            <NumberBox Value="{x:Bind Path=ImportQuota, Mode=TwoWay}" HorizontalAlignment="Center" Width="200" x:Name="Importquote"/>
            <Button Click="Button_Click_MapEditor" HorizontalAlignment="Right" Margin="40">Karte anpassen</Button>
            <Button Click="Button_Click_MapView" HorizontalAlignment="Right" Margin="40">Simulation starten</Button>
        </StackPanel>
        <TeachingTip x:Name="Maptoosmall"
	Title="Die Karte ist zu klein"
	Subtitle="Empfohlen ist eine Mindestgr&#246;&#223;e von 10 mal 10"
	PreferredPlacement="Auto"
	PlacementMargin="20"
	IsLightDismissEnabled="True"
	CloseButtonContent="Schlie&#223;en" />


    </Grid>
</Page>
