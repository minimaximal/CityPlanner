<Page
    x:Class="CityPlannerFrontend.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="pageTitle" Text="Main Page"
         Margin="16" Style="{StaticResource TitleTextBlockStyle}"/>
        <StackPanel VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontSize="40" Text="City Planner"/>
        <HyperlinkButton Content="Neue Simulation"
                     Click="HyperlinkButton_Click"
                     HorizontalAlignment="Center"/>
         </StackPanel>
    </Grid>
</Page>
